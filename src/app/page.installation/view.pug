.wrapper
    .scrollbox
        .container.area-round
            .text-center.mb-4
                a.cursor-pointer(href="/" style="display: inline-block;")
                    img(src="/brand/logo" style="width: 200px; display: inline-block;")

            .card.mb-5(*ngIf="step == 1")
                .card-header
                    h4.card-title Database Configuration

                .card-body.p-4
                    .form-group.row.mb-3
                        label.form-label.col-3.col-form-label Type
                        .col
                            .form-selectgroup
                                label.form-selectgroup-item
                                    input.form-selectgroup-input(type="radio", name="dbtype", value="sqlite", [(ngModel)]="data.type", (ngModelChange)="service.render()")
                                    span.form-selectgroup-label
                                        span sqlite
                                label.form-selectgroup-item
                                    input.form-selectgroup-input(type="radio", name="dbtype", value="mysql", [(ngModel)]="data.type", (ngModelChange)="service.render()")
                                    span.form-selectgroup-label
                                        span MySQL

                    ng-container(*ngIf="data.type != 'mysql'")
                        .form-group.row.mb-3
                            label.form-label.col-3.col-form-label Path
                            .col
                                input.form-control(type="text", placeholder="dizest.db", [(ngModel)]="data.path")

                    ng-container(*ngIf="data.type == 'mysql'")
                        .form-group.row.mb-3
                            label.form-label.col-3.col-form-label Database
                            .col
                                input.form-control(type="text", placeholder="dizest", [(ngModel)]="data.database")
                        
                        .form-group.row.mb-3
                            label.form-label.col-3.col-form-label Host
                            .col
                                input.form-control(type="text", placeholder="dizest", [(ngModel)]="data.host")
                        
                        .form-group.row.mb-3
                            label.form-label.col-3.col-form-label Port
                            .col
                                input.form-control(type="number", placeholder="3306", [(ngModel)]="data.port")
                        
                        .form-group.row.mb-3
                            label.form-label.col-3.col-form-label User
                            .col
                                input.form-control(type="text", placeholder="root", [(ngModel)]="data.user")
                        
                        .form-group.row.mb-3
                            label.form-label.col-3.col-form-label Password
                            .col
                                input.form-control(type="password", placeholder="", [(ngModel)]="data.password")
                        
                .card-footer.d-flex.p-2
                    .ml-auto
                    .btn.btn-blue.btn-circle((click)="configdb()", style="width: 120px;") Next

            .card.mb-5(*ngIf="step == 2")
                .card-header
                    h4.card-title Create admin account

                .card-body.p-4
                    .form-group.row.mb-3
                        label.form-label.col-3.col-form-label User ID
                        .col
                            input.form-control(type="text", placeholder="ID", [(ngModel)]="user.id")

                    .form-group.row.mb-3
                        label.form-label.col-3.col-form-label Email
                        .col
                            input.form-control(type="email", placeholder="mail", [(ngModel)]="user.email")
                    
                    .form-group.row.mb-3
                        label.form-label.col-3.col-form-label Username
                        .col
                            input.form-control(type="text", placeholder="username", [(ngModel)]="user.username")

                    .form-group.row.mb-3
                        label.form-label.col-3.col-form-label Password
                        .col
                            input.form-control(type="password", placeholder="password", [(ngModel)]="user.password")

                    .form-group.row.mb-3
                        label.form-label.col-3.col-form-label Confirm Password
                        .col
                            input.form-control(type="password", placeholder="Confirm Password", [(ngModel)]="user.password_re")
                        
                .card-footer.d-flex.p-2
                    .btn.btn-white.btn-circle((click)="prev()" style="width: 120px;") Prev
                    .ml-auto
                    .btn.btn-blue.btn-circle((click)="start(user)" style="width: 120px;") Start

