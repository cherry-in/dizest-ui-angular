aside.navbar.navbar-vertical.navbar-expand-lg.navbar-side
    .navbar-brand-container.d-mobile
        button.navbar-toggler(type="button", routerLink="/")
            span.navbar-toggler-icon

        a.navbar-brand.p-0.m-0((click)="isMenuCollapsed = !isMenuCollapsed")
            .text-center
                img.m-0(src='/assets/brand/dizest-hub.png')

    .collapse.navbar-collapse([ngbCollapse]="isMenuCollapsed")
        .user-profile(*ngIf="service.auth.status")
            .card
                .card-body.pr-3.pl-3.pb-0
                    .row.align-items-center
                        .col-auto.p-0.m-0
                            .btn-list.area-round
                                .ubtn(routerLink="/").
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-back-up" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M9 13l-4 -4l4 -4m-4 4h11a4 4 0 0 1 0 8h-1"></path>
                                    </svg>
                        .col.p-0.m-0
                            .userinfo
                                .name {{workflow.data.title}}
                        
                .card-footer
                    .clicks
                        .click((click)="tab('apps')", [class.active]="activeTab == 'apps'")
                            .action-btn
                                i.fa-solid.fa-cubes(style="width: 22px;")
                            .action-border
                        .click.active((click)="tab('drive')", [class.active]="activeTab == 'drive'")
                            .action-btn
                                i.fa-solid.fa-hdd(style="width: 22px;")
                            .action-border
                        .click.active((click)="tab('health')", [class.active]="activeTab == 'health'")
                            .action-btn
                                i.fa-solid.fa-heart-pulse(style="width: 20px;")
                            .action-border

        .tabs
            ng-container(*ngIf="activeTab == 'apps'")
                wiz-portal-dizest-we-apps
            ng-container(*ngIf="activeTab == 'drive'")
                wiz-portal-dizest-we-drive
            ng-container(*ngIf="activeTab == 'health'")
                wiz-portal-dizest-we-health

